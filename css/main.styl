@import url('http://fonts.googleapis.com/css?family=Black+Ops+One')
@import "nib/vendor"
vendor-prefixes ?= ms moz o webkit official
clouds = #fbfcfc
black = #0f0f0f
green = #0bc75c
gray = #dedede
gray-2 = #3c4349
naranja = #e67e22

@font-face
	font-family  'HelveticaNeueLight' 
	src  url('../fonts/HelveticaNeueLight.eot') 
	src  url('../fonts/HelveticaNeueLight.eot?=btf') format("embedded-opentype"),
		 url('../fonts/HelveticaNeueLight.woff') format('woff'),
		 url('../fonts/HelveticaNeueLight.ttf') format('truetype'),
		 url('../fonts/HelveticaNeueLight.svg#HelveticaNeue-Light') format('svg') 
@font-face
	font-family  'HelveticaNeue' 
	src  url('../fonts/HelveticaNeue.eot') 
	src  url('../fonts/HelveticaNeue.eot?=btf') format("embedded-opentype"),
		 url('../fonts/HelveticaNeue.woff') format('woff'),
		 url('../fonts/HelveticaNeue.ttf') format('truetype'),
		 url('../fonts/HelveticaNeue.svg#HelveticaNeue') format('svg')

bgcolor(n)
	background n
	&:hover
		background lighten(n,8%)
	&:active
		background darken(n,6%)
*
	border 0
	margin 0
	padding 0
body
	background clouds
	color clouds
	font-family 'HelveticaNeueLight'
.container
	text-align justify
.i-1
	background url('../img/geometric.png')
.i-2
	background url('../img/color.jpg')
.i-3
	background url('../img/ij2NS7irXNUWG.png')
.i-4
	background url('../img/crosses.jpg')
.item
	background-attachment fixed
	background-position center
	background-size cover
	height 660px
	overflow auto
.img-m-w
	margin-top 65px
	width 35%
.img-right
	float right
.img-left
	float left
.i-main
	background url('../img/403172.png')
	background-attachment fixed
	background-position center
	background-size cover
	height 520px
	padding-top 120px
	& p
		font-size 18px
		margin 50px 0px
		text-align center
		text-transform capitalize
	h1
		font-size 9em
		text-shadow 1px 1px 0px black,2px 2px 0px black,3px 3px 0px black,4px 4px 0px black,5px 5px 0px black,6px 6px 0px black
.menu-fijo
	background gray-2
	box-shadow 0px 2px 10px black
	height 41px
	margin 0 auto
	position fixed
	top 0
	width 100%
	z-index 2
	.btn
		bgcolor (gray-2)
		border none
		border-radius 0px
		line-height 40px
		padding 13px
		&:hover
			color clouds
	.active
		color clouds
.btn
	border 2px solid clouds
	border-radius 5px
	color clouds
	font-family 'HelveticaNeue'
	font-size 12px
	letter-spacing 3px
	padding 10px 15px 
	text-decoration none
	text-transform uppercase
	&:hover
		background rgba(255, 255, 255, 0.5)
		color black
.active
	bgcolor (clouds)
	color black
.text-left
	display inline-block
	padding 78px 60px 0
	width 42%
	& p
		margin-bottom 10px
		margin-top 10px
.text-right
	display inline-block
	padding 78px 60px 0
	position absolute
	right 0px
	width 42%
	& p
		margin-bottom 10px
		margin-top 10px
	ol
		margin-bottom 40px
		margin-top 40px
		li 
			font-family 'HelveticaNeue'	
			text-transform uppercase
.a-center
	margin-top 15px
	text-align center
.white-popup
	margin 20px auto
	position relative
	text-align justify
	width 70%
	header
		background url('../img/hdr.jpg')
		border-bottom 1px solid gray-2
		border-radius 3px 3px 0 0
		padding 20px
	.cont 
		background clouds
		color black
		padding 40px 60px
.video-container 
	height 0 
	overflow hidden
	padding-bottom 56.25%
	padding-top 30px 
	position relative
.video-container iframe,
.video-container video,
.video-container object,
.video-container embed 
	position absolute
	top 0
	left 0
	width 100%
	height 100%
.cont-contacto
	margin 0 auto
	padding-top 100px
	width 40%
.show-hidde
	background gray
	box-shadow 0px 2px 10px black
	color clouds
	display none
	height 29px
	left 0
	margin-bottom 20px
	position fixed
	top 0
	width 100%
	z-index 3
	& img
		height auto
		width auto 
.encabezado
	height 300px
	overflow hidden
	padding 40px
	p
		font-family 'HelveticaNeue'
		margin 0 auto
		margin-top 20px
		width 60%
.html5
	background url('../img/headershapes2.png')
	background-attachment fixed
	background-position center
	background-size cover
.rest
	height auto
	margin 0 auto
	width 15%
.cont2
	color black
	margin 0 auto
	margin-top 40px
	margin-bottom 40px
	width 85%
	p
		margin-top 10px
.no-shadow
	text-shadow none
	margin-top 10px
	
form
	font-family 'HelveticaNeue'
	letter-spacing 2px
	margin-bottom 40px
	margin-top 40px
	text-align left
	text-transform uppercase
	input
		border 3px solid gray-2
		border-radius 3px
		letter-spacing 2px
		margin-bottom 10px
		margin-top 10px
		padding 5px
		text-transform uppercase
		width 100%	
h1,h2
	font-family: 'Black Ops One', cursive;
	letter-spacing 5px
	text-align center
	text-shadow 1px 1px 0px black
	text-transform uppercase
nav
	margin-top 100px
	text-align center
ul li 
	display inline-block
	margin-right 5px
	list-style none
img
	height auto
	width 100%